{
  "name": "relay",
  "version": "0.0.1",
  "description": "Controls a SainSmart 16-channel USB-HID programmable relay",
  "bin" : "bin/relay",
  "author" : {
    "name": "Michael Vines",
    "email": "mvines@gmail.com"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/mvines/relay.git"
  },
  "license": "MIT",
  "scripts": {
